@model WebSite.Entities.User;

<head>
    <link href="~/assets//css/login.css" rel="stylesheet">
</head>
<form asp-controller="Account" asp-action="CheckUser" method="post" class="login-form">
    <div asp-validation-summary="All" class="all"></div>
    @if (TempData.ContainsKey("SuccessMessage"))
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    <h1>Please login</h1>
    <div class="form-group">
        <label for="Enail">Email</label>
        <input asp-for="Email" type="email" id="email" name="Email" required>
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input asp-for="Password" type="password" id="password" name="Password" required>
    </div>
    <button type="submit">Login</button>
</form>