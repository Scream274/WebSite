@using WebSite.Entities;
<div class="content-wrapper">

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Settings /</span> Posts</h4>

        <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-pills flex-column flex-md-row mb-3">
                    <li class="nav-item">
                        <a class="nav-link active " href="/Admin/GetAllPosts"><i class="bx bx-user me-1"></i> All posts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" style="background-color:#71dd37; margin-left:10px" href="/Admin/AddNewPost"><i class="bx bx-user me-1"></i>Add new post</a>
                    </li>
                </ul>
                <div class="card mb-4">
                    <!-- Account -->
                    <div class="card-body">
                        <div class="card">
                            <div class="table-responsive text-nowrap">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Image</th>
                                            <th>Title</th>
                                            <th>Author</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody class="table-border-bottom-0">
                                        @foreach (Post post in Model)
                                        {
                                            <tr>
                                                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@post.Id</strong></td>
                                                <td>
                                                    <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                                        <li data-bs-toggle="tooltip"
                                                            data-popup="tooltip-custom"
                                                            data-bs-placement="top"
                                                            class="avatar avatar-xs pull-up"
                                                            title="Lilian Fuller">
                                                            <img src="@post.ImgSrc" alt="@post.ImgAlt" class="rounded-circle" />
                                                        </li>
                                                    </ul>
                                                </td>
                                                <td>@post.Title</td>
                                                <td><span class="badge bg-label-primary me-1">@post.Author</span></td>
                                                <td>
                                                    <div class="dropdown">
                                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                            <i class="bx bx-dots-vertical-rounded"></i>
                                                        </button>
                                                        <div class="dropdown-menu">
                                                            <form asp-controller="Admin" asp-action="EditPost" method="get">
                                                                <input type="hidden" name="id" value="@post.Id" />
                                                                <button class="dropdown-item" type="submit"><i class="bx bx-edit-alt me-1"></i> Edit</button>
                                                            </form>
                                                            <form asp-controller="Admin" asp-action="DeletePost" method="post">
                                                                <input type="hidden" name="id" value="@post.Id" />
                                                                <button class="dropdown-item" type="submit"><i class="bx bx-trash me-1"></i> Delete</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- /Account -->
                </div>
            </div>
        </div>
    </div>
    <div class="content-backdrop fade"></div>
</div>
